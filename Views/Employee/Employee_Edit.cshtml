@model Bouldering_Company.Models.employeedata

@{
    ViewBag.Title = "Employee_Edit";
}


<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    #navbar {
        display: grid;
        min-height: 100px;
        grid-auto-flow: column;
        background-color: lightgray;
        padding-right: 2%;
        padding-left: 2%;
    }

    #logo {
        display: grid;
        justify-content: start;
        align-content: center;
        font-size: 30px;
        font-weight: 700;
        color: black;
        text-transform: uppercase;
    }

    #links {
        display: grid;
        justify-content: right;
        align-content: center;
        grid-auto-flow: column;
        grid-gap: 1.5em;
    }

        #links a {
            text-decoration: none;
            color: black;
            text-transform: uppercase;
            font-weight: bold;
        }

            #links a:hover {
                color: #0474bc;
            }


    html {
        background-image: url("");
        background-color: none;
        background-repeat: no-repeat;
        background-size: cover;
        margin: 0;
        font-family: "Open Sans", sans-serif;
    }

    #Title {
        text-align: center;
        font-size: 35px;
        color: black;
        text-transform: uppercase;
    }

    #btn1, #btn2 {
        padding-right: 2%;
        padding-top: 2%;
        display: inline-block;
    }

    .form-horizontal {
        background-color: white;
        border-radius: 15px;
        margin: 180px auto;
        height: 550px;
        width: 400px;
        padding: 15px;
    }

    .container {
        text-align: left;
    }

    input[type="text"] {
        border: 0;
        outline: 0;
        width: 90%;
        background: transparent;
        border-bottom: 1px solid black;
    }

    input[type="submit"] {
        height: 50px;
        text-align: center;
        font-size: 22px;
        width: 150px;
        border: none;
        align-content: center;
        background-color: white;
        margin: 0 auto;
        display: block;
        cursor: pointer;
        color: black;
        text-transform: uppercase;
        font-weight: bold;
    }

    input[type='button'] {
        height: 30px;
        text-align: center;
        font-size: 15px;
        width: 120px;
        border: none;
        align-content: center;
        background-color: white;
        margin: 0 auto;
        display: block;
        cursor: pointer;
        color: black;
        text-transform: uppercase;
        font-weight: bold;
    }

    input[type="submit"]:hover {
        color: #0474bc;
    }

    input[type="button"]:hover {
        color: #0474bc;
    }
</style>

<header>
    <nav>
        <div id="navbar">
            <div id="logo" class="reverse">

                <div class="logo">Employee Portal</div>

            </div>
            <div id="links">
                <a href="@Url.Action("In_Gym", "Employee")">Gym Data</a>
                <a href="@Url.Action("View_Climbers", "Employee")">Climber Data</a>
                <a href="@Url.Action("View_Employees", "Employee")">Employee Data</a>
                <a href="@Url.Action("Climber_In", "Climber")">Sign Out</a>
            </div>
        </div>

    </nav>
</header>

<br />
<br />
<br />
<br />
<br />

<h2>Edit Account</h2>

<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.employeeID)
        <br />
        <div class="form-group">
            <b>First Name</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.firstName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.firstName, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <b>Last Name</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.lastName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.lastName, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <b>User Email</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.employeeEmail, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.employeeEmail, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
