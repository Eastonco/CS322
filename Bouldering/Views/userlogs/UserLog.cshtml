@model Bouldering.Models.userLog

@{
    ViewBag.Title = "Create";
}

<style>
    html {
        background-image: url("https://cdn.pixabay.com/photo/2014/07/01/12/35/mountains-381231_1280.jpg");
        background-repeat: no-repeat;
        background-size: cover;
        font-family: 'Open Sans', Helvetica, Arial, sans-serif;
    }

    #Title {
        text-align: center;
        font-size: 35px;
        color: green;
    }

    .nav {
        width: 100%;
        height: 13%;
        background-color: rgba(255,255,255,0.5);
    }

    #Nav_Container, #Selection {
        display: inline-block;
    }

    #Selection {
        float: right;
    }

    #btn1, #btn2 {
        padding-right: 2%;
        padding-top: 2%;
        display: inline-block;
    }

    .form-horizontal {
        background-color: white;
        border-radius: 15px;
        margin: 180px auto;
        height: 550px;
        width: 400px;
        padding: 15px;
    }

    .container {
        text-align: left;
    }

    input[type="text"] {
        border: 0;
        outline: 0;
        width: 90%;
        background: transparent;
        border-bottom: 1px solid black;
    }

    input[type="submit"] {
        height: 50px;
        text-align: center;
        font-size: 20px;
        width: 120px;
        border-radius: 50px;
        border: 2px solid green;
        color: green;
        letter-spacing: 1px;
        align-content: center;
        background-color: white;
        margin: 0 auto;
        display: block;
        cursor: pointer;
    }

    input[type='button'] {
        height: 30px;
        text-align: center;
        font-size: 10px;
        width: 120px;
        border-radius: 50px;
        border: 2px solid blue;
        color: green;
        letter-spacing: 1px;
        align-content: center;
        background-color: white;
        margin: 0 auto;
        display: block;
        cursor: pointer;
    }

    input[type="submit"]:hover {
        background-color: green;
    }
</style>

<div class="nav">
    <div id="Nav_Container">
        <h1>Mountain Top Bouldering Company</h1>
    </div>
    <div id="Selection">
        <input type="button" id="btn1" value="Climber" onclick="location.href='@Url.Action(" Create", "userdatas" )'" />
        <input type="button" id="btn2" value="Employee" onclick="location.href='@Url.Action(" Create", "employeedatas" )'" />
    </div>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <div class="container">

        <h2 id="Title">Welcome Back!</h2>
        <br />
        <br />
        <br />
        <br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @*@Html.LabelFor(model => model.userID, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                @Html.EditorFor(model => model.userID, new { htmlAttributes = new { @class = "form-control", placeholder = "User ID" } })
                @Html.ValidationMessageFor(model => model.userID, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <br />
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.timeStamp, new { htmlAttributes = new { @class = "form-control", placeholder = "Time Stamp" } })
                @Html.ValidationMessageFor(model => model.timeStamp, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
        <br />
        <input type="button" value="Sign In" onclick="location.href='@Url.Action(" ", " ")'" />
    </div>
</div>
}

